{
    "name": "hexlet/code",
    "description": "Demo project for Hexlet",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "wp-cli/php-cli-tools": "v0.11.11",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpcs": "phpcs -- --standard=PSR12 bin src",
        "phpstan-src": "phpstan analyse -l 5 src"
    },
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "autoload": {
        "files": [
            "src/func_loader.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.58"
    }
}
